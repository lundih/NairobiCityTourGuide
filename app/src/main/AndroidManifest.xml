<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.nairobicitytourguide">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_tour_guide"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_tour_guide"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RecreationActivity" />
        <activity android:name=".HistoryActivity"></activity>
    </application>

</manifest>